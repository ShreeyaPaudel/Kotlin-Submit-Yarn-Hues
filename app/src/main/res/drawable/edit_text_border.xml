<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke
                android:width="1dp"
                android:color="#6C84A2" /> <!-- Focused border color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#F6F6F6" /> <!-- Background color -->
            <stroke
                android:width="1dp"
                android:color="#6C84A2" /> <!-- Default border color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>