<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_option_3"
    tools:context=".ui.activity.LoginActivity">

    <TextView
        android:id="@+id/loginpg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="100dp"
        android:hint="Login to Yarn Hues!"
        android:textColorHint="#6C84A2"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="times new roman"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_marginTop="90dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:padding="8dp"
        android:hint="Enter Email" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/edit_text_border"
        android:padding="8dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Password" />

    <TextView
        android:id="@+id/btnForget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:textSize="10dp"
        android:textColorHint="#6C84A2"
        android:hint="Forget Password?"
        />

    <Button
        android:id="@+id/btnLogin"
        android:backgroundTint="#6C85A3"
        android:layout_marginStart="165dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:hint="Login" />

    <TextView
        android:id="@+id/btnSignupnavigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:textSize="10dp"
        android:textColorHint="#6C84A2"
        android:hint="Don't have an account? Click here."
        />
</LinearLayout>